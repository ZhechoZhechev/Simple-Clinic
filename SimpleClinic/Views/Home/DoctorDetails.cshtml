@model DoctorDetailsViewModel


<section style="background-color: rgba(255, 255, 255, 0.5);padding-top:50px" class="doctor_section layout_padding">
    <div class="container">

        <div class="row">
            <div class="col-sm-6 col-lg-4 mx-auto">
                <div class="box">
                    <div class="img-box">
                        <img src="~/img/profiles/@Model.ProfilePictureFilename" alt="Picture">
                    </div>
                    <div class="detail-box">
                        <h5>
                            @Model.FirstName @Model.LastName
                        </h5>
                        <h6 class="">
                            Speciality: @Model.Speciality
                        </h6>
                        <h6 class="">
                            Biolgraphy: @Model.ShortBio
                        </h6>
                        <h6 class="">
                            Price Per Hour: @Model.PricePerHour
                        </h6>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>