@{
    ViewBag.Title = "Choose Appointment Date";
}

<div class="container">
    <h2>Choose Appointment Date</h2>

    <p>Select a date for your appointment:</p>

    <input type="text" id="datepicker">

    <div id="doctor-schedule">
        <!-- The doctor's schedule will be dynamically generated here -->
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#datepicker").datepicker({
                onSelect: function (selectedDate) {
                    $.ajax({
                        url: "/Patient/Appointment/GetDoctorSchedule",
                        type: "GET",
                        data: { selectedDate: selectedDate },
                        success: function (schedule) {
                            $("#doctor-schedule").html(schedule);
                        },
                        error: function () {
                            alert("Error fetching doctor's schedule.");
                        }
                    });
                }
            });
        });
    </script>
}
