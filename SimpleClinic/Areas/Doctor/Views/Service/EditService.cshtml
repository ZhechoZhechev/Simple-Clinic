@model ServiceViewModel

@{
    ViewData["Title"] = "Edit Service";
}
<style>
    .justify-content-center {
        height: 53vh;
        align-items: center;
    }
</style>

<div class="container mt-4 mb-4 text-center">
    <div class="row justify-content-center">
        <div class="col-lg-4">
            <h2>@ViewData["Title"]</h2>

            <form asp-area="Doctor" asp-controller="Service" asp-action="EditService" class="needs-validation" method="post" novalidate>

                <div class="form-floating mb-3">
                    <input asp-for="Name" class="form-control" placeholder="" />
                    <label asp-for="Name">Name</label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="EquipmentPicture" class="form-control" placeholder="" />
                    <label asp-for="EquipmentPicture">Picture Link</label>
                    <span asp-validation-for="EquipmentPicture" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Price" class="form-control" type="number" placeholder="" />
                    <label asp-for="Price">Price</label>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Save Edited</button>
            </form>
        </div>
    </div>
</div>
