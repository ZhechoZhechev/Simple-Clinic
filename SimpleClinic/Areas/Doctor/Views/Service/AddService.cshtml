@model PrescriptionViewModel

@{
    ViewData["Title"] = "Add Service";
}

<div class="container mt-4 mb-4 text-center">
    <div class="row justify-content-center">
        <div class="col-lg-4">
            <h2>@ViewData["Title"]</h2>

            <form asp-area="Doctor" asp-controller="Doctor" asp-action="AddService" class="needs-validation" method="post" novalidate>

                <div class="form-group">
                    <label asp-for="PrescriptionDate">Name</label>
                    <input asp-for="PrescriptionDate" class="form-control" />
                    <span asp-validation-for="PrescriptionDate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PatientId">Picture Link</label>
                    <input asp-for="PatientId" class="form-control" />
                    <span asp-validation-for="PatientId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="MedicamentId">Price</label>
                    <input asp-for="PatientId" class="form-control" type="number"/>
                    <span asp-validation-for="MedicamentId" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Save New Service</button>
            </form>
        </div>
    </div>
</div>
