@model List<AllServicesForScheduleViewModel>

<section style="background-color: rgba(255, 255, 255, 0.5);padding-top:50px; height: 53.4vh" class="doctor_section layout_padding">
    <div class="container">
        <div class="heading_container heading_center">
            <h2>
                Our Services
            </h2>
        </div>
        <div class="row">
            @foreach (var service in Model)
            {
                <div class="col-sm-6 col-lg-4 mx-auto">
                    <div class="box">
                        <div class="detail-box">
                            <h5>
                                @service.ServiceName
                            </h5>
                            <h6 class="">
                                <a class="btn btn-outline-info" asp-area="Doctor" asp-controller="Service" asp-action="AddSchedule" asp-route-id="@service.Id" asp-route-serviceName="@service.ServiceName">Add Schedule</a>
                            </h6>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>