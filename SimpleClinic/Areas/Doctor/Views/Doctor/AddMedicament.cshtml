@model MedicamentViewModel

@{
    ViewData["Title"] = "Add Medicament";
}

<style>
    .container.mt-4.mb-4.text-center{
        display: grid;
        height: 51vh;
        align-items: center;
    }

    form button{
        margin-top: 1em;
    }
</style>

<div  class="container mt-4 mb-4 text-center">
    <div class="row justify-content-center">
        <div class="col-lg-4">
            <h2>@ViewData["Title"]</h2>
            <form asp-area="Doctor" asp-controller="Doctor" asp-action="AddMedicament" class="needs-validation" method="post" novalidate>
                <div class="form-floating mb-3">
                    <input asp-for="Name" type="text" id="floatingInput" placeholder="Name" class="form-control" />
                    <label asp-for="Name" for="floatingInput">Name</label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="QuantityPerDayMilligrams" type="number" id="floatingNumber" placeholder="Milligrams" class="form-control" />
                    <label asp-for="QuantityPerDayMilligrams" for="floatingNumber">Milligrams</label>
                    <span asp-validation-for="QuantityPerDayMilligrams" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Save Medicament</button>
            </form>
        </div>
    </div>
</div>