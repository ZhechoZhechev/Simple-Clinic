@model MedicamentViewModel

<div style="height: 48.4vh;" class="container mt-4 mb-4 text-center">
    <div class="row justify-content-center">
        <div class="col-lg-4">
            <h2>Create Prescription</h2>
            <form asp-area="Doctor" asp-controller="Doctor" asp-action="AddMedicament" class="needs-validation" method="post" novalidate>
                <div class="form-group">
                    <label asp-for="Name">Medicament Name:</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="QuantityPerDayMilligrams">Medicament Milligrams:</label>
                    <input asp-for="QuantityPerDayMilligrams" class="form-control" />
                    <span asp-validation-for="QuantityPerDayMilligrams" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Save Medicament</button>
            </form>
        </div>
    </div>
</div>