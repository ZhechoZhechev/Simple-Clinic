@model PrescriptionViewModel

@{
    ViewData["Title"] = "Create Prescription";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css" rel="stylesheet" />

<div class="container mt-4 mb-4 text-center">
    <div class="row justify-content-center">
        <div class="col-lg-4">
            <h2>Create Prescription</h2>

            <form asp-action="Create" class="needs-validation" novalidate>

                <div class="form-group">
                    <label asp-for="PatientId">Patient:</label>
                    <select asp-for="PatientId" class="form-control" id="selectPatient"
                            data-url="@Url.Action("GetPatientsForSelect2", "Doctor", new { area = "Doctor" })"></select>
                    <span asp-validation-for="PatientId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PrescriptionDate">Prescription Date:</label>
                    <input asp-for="PrescriptionDate" class="form-control" />
                    <span asp-validation-for="PrescriptionDate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="MedicamenName">Medicament Name:</label>
                    <div class="input-group">
                        <input asp-for="MedicamenName" class="form-control" />
                        <div class="input-group-append">
                            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#medicamentModal">Add Medicament</button>
                        </div>
                    </div>
                    <span asp-validation-for="MedicamenName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Instructions">Instructions:</label>
                    <textarea asp-for="Instructions" class="form-control"></textarea>
                    <span asp-validation-for="Instructions" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Save Prescription</button>
            </form>
        </div>
    </div>
</div>

<!-- Modal for Medicament -->
<div class="modal fade" id="medicamentModal" tabindex="-1" role="dialog" aria-labelledby="medicamentModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="medicamentModalLabel">Add Medicament</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="medicamentForm" class="needs-validation" novalidate>
                    <div class="form-group">
                        <label for="medicamentName">Medicament Name:</label>
                        <input type="text" class="form-control" id="medicamentName" required />
                        <div class="invalid-feedback">Medicament name is required.</div>
                    </div>
                    <div class="form-group">
                        <label for="medicamentQuantity">Quantity (in milligrams):</label>
                        <input type="number" class="form-control" id="medicamentQuantity" required />
                        <div class="invalid-feedback">Quantity is required and must be a valid number.</div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="addMedicament">Add</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Include Select2 JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>
    <script src="~/js/prescription.js" asp-append-version="true"></script>
        }